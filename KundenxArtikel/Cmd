create table bestellungen(ordernumber int primary key auto_increment not null, kid int, aid int, anzahl int, foreign key(aid) references artikel(id) on update no action, foreign key(kid) references kunden(id) on update no action);
create table kunden(id int auto_increment primary key not null, name varchar(30), email varchar(40));
create table artikel(id int primary key auto_increment not null, bezeichnung varchar(30), preis decimal(10,2));